% title page
\defbeamertemplate*{title page}{irida}[1][] {
  \usebeamerfont{title}\usebeamercolor[fg]{title}\textbf{\inserttitle}\par\smallskip
  \usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par\bigskip
  \usebeamerfont{author}\usebeamercolor[fg]{author}\textbf{\insertauthor}\par\smallskip
  \usebeamerfont{institute}\usebeamercolor[fg]{institute}\insertinstitute\par\medskip
  \usebeamerfont{date}\usebeamercolor[fg]{date}\insertdate\par\bigskip
  
  \begin{tikzpicture}[remember picture, overlay]
    \node[yshift=-10pt,xshift=50pt] at (0,0){\includegraphics[width=3cm]{images/IRIDA_logo.jpg}};
    \node[yshift=-12pt,xshift=160pt] at (0,0){\includegraphics[width=3.6cm]{images/ucy-logo}};
  \end{tikzpicture}
  
  \begin{tikzpicture}[remember picture, overlay]
    \node[yshift=-150pt,xshift=-100pt] at (current page.north east){
    \includegraphics[height=10cm,keepaspectratio, decodearray={0.95 1 0.95 1 0.95 1}]{images/irida.png} };
  \end{tikzpicture}
}

\newcounter{theo}[section]\setcounter{theo}{0}
\newenvironment{theo}[2][]{
  \refstepcounter{theo}
  \ifstrempty{#1}
  {\mdfsetup{
      frametitle={
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=gray,text=white]
        {\strut Theorem};}}
  }
  {\mdfsetup{
      frametitle={
        \tikz[baseline=(current bounding box.east),outer sep=0pt]
        \node[anchor=east,rectangle,fill=blue!20]
        {\strut Theorem~\thetheo:~#1};}}
  }
  \mdfsetup{innertopmargin=10pt,linecolor=gray,
    linewidth=2pt,topline=true,%
    frametitleaboveskip=\dimexpr-\ht\strutbox\relax
  }
  \begin{mdframed}[]\relax
    \label{#2}}{\end{mdframed}}
  
%\useoutertheme{irida}
\addtobeamertemplate{frametitle}{}{
  \begin{tikzpicture}[remember picture,overlay]
  \node[anchor=north east,yshift=2pt,xshift=-24pt] at (current page.north east) {\includegraphics[height=0.75cm]{images/ucy_tree.jpg}};
  \node[anchor=north east,yshift=7pt,xshift=1pt] at (current page.north east) {\includegraphics[height=1.15cm, decodearray={0.3 0.5 0.3 0.5 0.3 0.5}]{images/irida.png}};
  \end{tikzpicture}\vspace{-5mm}
}

